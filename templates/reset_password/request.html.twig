{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Changer le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Enter votre addresse e-mail et nous vous enverrons un lien pour vous modifier votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">envoyer l'e-mail de changement de mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
